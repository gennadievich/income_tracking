<div class="col-md-offset-3 col-md-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div>
      <%= f.email_field :email, placeholder: "Email", class: "form-control width-80", autofocus: true %>
    </div>

    <div>
      <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "btn btn-default width-80" %>
    </div>
  <% end %>

  <div class="alert">
    <%= devise_error_messages! %>
  </div>

</div>