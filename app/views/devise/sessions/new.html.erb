<div class="col-md-offset-3 col-md-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%= f.email_field :email, placeholder: "Email", class: "form-control width-80", autofocus: true %>
    </div>

    <div>
      <%= f.password_field :password, placeholder: "Password", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "Log in", class: "btn btn-default width-80" %>
    </div>
  <% end %>

  <%= render partial: "errors/error" %>
</div>
