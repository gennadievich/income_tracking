<%= form_tag ('/reports'), {class: "form-inline"} do %>
  <div class="form-group">
  <%= date_field_tag :start_date, nil, class: "form-control" %>
  <%= date_field_tag :end_date, nil, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= select_tag :category, options_from_collection_for_select(current_user.categories, "id", "name"), include_blank: true, class: "form-control" %>
  <%= submit_tag "Show report", class: "btn btn-info" %>
  </div>
<% end %>
